        </dt>
        <dd class="col-sm-10">
            @(Model.Worker != null ? Model.Worker.Name : "Ej tilldelad")
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
