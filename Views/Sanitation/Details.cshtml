@model dt191g_projekt.Models.SanitationModel


@{
    ViewData["Title"] = "Information";
}

<h1>Sanerings</h1>

<div class="details">
    <h4>Information</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SanitationType)
        </dt>
        <dd class="col-sm-10">
            @(Model.SanitationType?.ToString() ?? "Ej angivet")
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @(Model.Location?.ToString() ?? "Ej angivet")
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @(Model.Description?.ToString() ?? "Ej angivet")
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WasteAmount)
        </dt>
        <dd class="col-sm-10">
            @(Model.WasteAmount?.ToString() + " mÂ³" ?? "Ej angivet")
        </dd>
        
