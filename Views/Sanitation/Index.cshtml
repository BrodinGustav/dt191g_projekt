@model IEnumerable<dt191g_projekt.Models.SanitationModel>

@{
    ViewData["Title"] = "Saneringar";
}

<h1>Saneringar</h1>

<div class="addSanitationbtn">
    <a asp-action="Create">Lägg till ny sanering</a>
</div>
<table class="tableData">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SanitationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WasteAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.SanitationType != null ? item.SanitationType : "Ej angivet")
                </td>
                <td>
                    @(item.Location != null ? item.Location : "Ej angivet")
                </td>
                <td>
                    @(item.Description != null ? item.Description : "Ej angivet")
                </td>
                <td>
                    @(item.WasteAmount != null ? $"{item.WasteAmount} m³" : "Ej angivet")
                </td>
                <td>
                    @(item.Worker != null ? item.Worker.Name : "Ej angivet")
                </td>
                <td>
                    @(item.Customer != null ? item.Customer.Name : "Ej angivet")
                </td>
                <td>
                    @(item.CreatedBy != null ? item.CreatedBy : "Ej angivet")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!--Kortlayout för små enheter -->
<div class="sanitation-cards">
    @foreach (var item in Model)
    {
        <div class="sanitation-card">
            <p><strong>Typ:</strong> @(item.SanitationType ?? "Ej angivet")</p>
            <p><strong>Plats:</strong> @(item.Location ?? "Ej angivet")</p>
            <p><strong>Beskrivning:</strong> @(item.Description ?? "Ej angivet")</p>
            <p><strong>Mängd:</strong> @(item.WasteAmount != null ? $"{item.WasteAmount} m³" : "Ej angivet")</p>
            <p><strong>Arbetare:</strong> @(item.Worker?.Name ?? "Ej angivet")</p>
            <p><strong>Kund:</strong> @(item.Customer?.Name ?? "Ej angivet")</p>
            <p><strong>Skapad av:</strong> @(item.CreatedBy ?? "Ej angivet")</p>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> 
            <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
        </div>
    }
</div>