@model IEnumerable<dt191g_projekt.Models.SanitationModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Lägg till ny sanering</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SanitationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WasteAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.SanitationType != null ? item.SanitationType : "Ej angivet")
                </td>
                <td>
                    @(item.Location != null ? item.Location : "Ej angivet")
                </td>
                <td>
                    @(item.Description != null ? item.Description : "Ej angivet")
                </td>
                <td>
                    @(item.WasteAmount != null ? $"{item.WasteAmount} m³" : "Ej angivet")
                </td>
                <td>
                    @(item.Worker != null ? item.Worker.Name : "Ej angivet")
                </td>
                <td>
                    @(item.Customer != null ? item.Customer.Name : "Ej angivet")
                </td>
                <td>
                    @(item.CreatedBy != null ? item.CreatedBy : "Ej angivet")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
