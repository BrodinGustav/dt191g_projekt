@model dt191g_projekt.Models.SanitationModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sanering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SanitationType" class="control-label">Saneringstyp</label>
                <input asp-for="SanitationType" class="form-control" />
                <span asp-validation-for="SanitationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label">Adress</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivning</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WasteAmount" class="control-label">Avfallsmängd</label>
                <input asp-for="WasteAmount" class="form-control" />
                <span asp-validation-for="WasteAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Kund</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>  <!-- Viewbag skickar lista med kunder från controller till vyn för dropdown-meny-->
            </div>

            <div class="form-group">
                <label asp-for="WorkerId" class="control-label">Sanerare</label>
                <select asp-for="WorkerId" class="form-control" asp-items="ViewBag.WorkerId"></select> <!-- Viewbag skickar lista med arbetare från controller till vyn för dropdown-meny-->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
